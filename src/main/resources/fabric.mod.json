	"version": "${version}",
	"name": "Line Button",
	"description": "Cool button makes my life better",
	"authors": [
		"Happy"
	],
	"contact": {
		"sources": "https://github.com/OoHappyoO/Line-Button"
	},
	"license": "CC0-1.0",
	"icon": "assets/line-button/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			{
				"value": "gg.happy.linebutton.LineButton",
